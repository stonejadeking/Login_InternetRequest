<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.stone.login_internetrequest.activity.PictureShowActivity">

    <EditText
        android:id="@+id/et_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="http://i1.hdslb.com/bfs/archive/763293ce06bf1e684ef0ea3da43ae5008d8564b8.jpg" />

    <Button
        android:id="@+id/bt_pic_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="展示图片" />

    <Button
        android:id="@+id/bt_close_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭页面" />

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
